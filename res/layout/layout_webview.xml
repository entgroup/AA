<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <include layout="@layout/loading_webview" />

    <WebView
        android:id="@+id/mywebview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/page_title_bar_id2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5" >

        <HorizontalScrollView
            android:id="@+id/hstest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/lfooter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="个人资料"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="文章分类"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="文章存档"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="文章列表"
                    android:textSize="12sp" />
                
                                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="文章详情"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="显示网络网页"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="显示网络图片"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="中文显示(不对空格做处理)"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="中文显示(空格的处理)"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="显示本地网页文件"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="显示本地图片文件"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:text="显示本地图片和文字混合的Html内容"
                    android:textSize="12sp" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</RelativeLayout>